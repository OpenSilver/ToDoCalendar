<Application
    x:Class="ToDoCalendar.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:media="using:System.Windows.Media">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="PhoneAccentBrush" Color="Purple"/>
            <SolidColorBrush x:Key="PhoneForegroundBrush" Color="Black"/>
            <SolidColorBrush x:Key="PhoneChromeBrush" Color="White"/>
            <sys:Double x:Key="PhoneFontSizeNormal">12</sys:Double>
            <media:FontFamily x:Key="PhoneFontFamilyNormal">Segoe UI</media:FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>